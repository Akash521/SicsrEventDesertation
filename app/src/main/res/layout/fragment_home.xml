<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vinit.sicsreventdesertation.Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220sp"
                android:id="@+id/imgHome_FeaturedEvent"
                android:minHeight="150dp"
                android:background="#00000000"
                android:src="@drawable/ganpati"
                android:adjustViewBounds="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Featured Events"
                android:id="@+id/txtHome_FeaturedEvents"
                android:layout_below="@+id/imgHome_FeaturedEvent"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220sp"
                android:id="@+id/imgHome_Nowhappening"
                android:minHeight="150dp"
                android:background="#00000000"
                android:src="@drawable/ganpati"
                android:adjustViewBounds="true"
                android:layout_below="@+id/txtHome_FeaturedEvents"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:clickable="true"
                android:layout_marginTop="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Now Happening"
                android:id="@+id/txtHome_Nowhappening"
                android:layout_below="@+id/imgHome_Nowhappening"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgHome_Upcoming"
                android:minHeight="150dp"
                android:background="#00000000"

                android:adjustViewBounds="true"
                android:layout_below="@+id/txtHome_Nowhappening"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Upcoming"
                android:id="@+id/txtHome_Upcoming"
                android:layout_below="@+id/imgHome_Upcoming"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
