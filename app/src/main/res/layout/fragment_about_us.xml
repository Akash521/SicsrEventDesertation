<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vinit.sicsreventdesertation.AboutUs">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55sp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\t\t\tEventify a mobile application which allows SICSR students to know about the event happening in college and give them a RSVP option to attend them."
                android:id="@+id/txtAboutUs_Message"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:textSize="18sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgAboutUs_Icon"
                android:layout_below="@+id/txtAboutUs_Message"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="44dp"
                android:src="@android:drawable/sym_action_email"
                android:background="#a6a4a4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="    Contact US"
                android:id="@+id/textView5"
                android:layout_above="@+id/textView6"
                android:layout_toRightOf="@+id/imgAboutUs_Icon"
                android:layout_toEndOf="@+id/imgAboutUs_Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="      eventify@sicsr.ac.in"
                android:id="@+id/textView6"
                android:layout_below="@+id/imgAboutUs_Icon"
                android:layout_toRightOf="@+id/imgAboutUs_Icon"
                android:layout_toEndOf="@+id/imgAboutUs_Icon"
                android:textSize="18sp" />



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
