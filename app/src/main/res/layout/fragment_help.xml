<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vinit.sicsreventdesertation.Help">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="What is the difference between Featured and Upcoming events?"
                android:id="@+id/txtHelp_Que1"
                android:layout_alignParentStart="false"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Featured events are large scale signature inter-college events, while upcoming events are intra-college events, eg. Events organized by Share and Care or other Clubs in college."
                android:id="@+id/txtHelp_Ans1"
                android:layout_below="@+id/txtHelp_Que1"
                android:layout_alignParentStart="true"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="Why should you Bookmark Events?"
                android:id="@+id/txtHelp_Que2"
                android:layout_below="@+id/txtHelp_Ans1"
                android:layout_alignParentStart="true"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="When you view events,you want to come back to later you can tap the Bookmark icon and view them later."
                android:id="@+id/txtHelp_Ans2"
                android:layout_below="@+id/txtHelp_Que2"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="For how long before the event can we RSVP?"
                android:id="@+id/txtHelp_Que3"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtHelp_Ans2"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="You can RSVP Yes/No any time before the event, currently we have not given the event organizers privilege to set end time."
                android:id="@+id/txtHelp_Ans3"
                android:layout_below="@+id/txtHelp_Que3"
                android:layout_alignParentStart="true"
                android:textSize="15dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="What do you mean by RSVP?"
                android:id="@+id/txtHelp_Que4"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtHelp_Ans3"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="RSVP means your confirmation that is if you are attending, or not attending the event."
                android:id="@+id/txtHelp_Ans4"
                android:layout_below="@+id/txtHelp_Que4"
                android:layout_alignParentStart="true"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="What about event registration fee?"
                android:id="@+id/txtHelp_Que5"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtHelp_Ans4"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Events having any registration fee, will mention it in the description. Payments should be made by contacting the event organizer."
                android:id="@+id/txtHelp_Ans5"
                android:layout_below="@+id/txtHelp_Que5"
                android:layout_alignParentStart="true"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="Where do I post my suggestions for the app?"
                android:id="@+id/txtHelp_Que6"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtHelp_Ans5"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Use the Feedback option to mail us all your suggestions, queries and doubts about the app."
                android:id="@+id/txtHelp_Ans6"
                android:layout_below="@+id/txtHelp_Que6"
                android:layout_alignParentStart="true"
                android:textSize="15dp"
                />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
